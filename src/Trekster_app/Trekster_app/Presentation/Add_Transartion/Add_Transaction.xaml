<Window x:Class="Trekster_app.Add_Transaction"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Trekster_app"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStyle="None"
        Title="Add_Transaction" Height="300" Width="300">

    <Border Background="#9E75C7" BorderBrush="Black" BorderThickness="5">
        <Grid>
            <Border Background="#FFC284" BorderBrush="Black" BorderThickness="5" Margin="10,10,10,244">
                <Grid>
                    <TextBlock FontSize="18" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="6,-1,0,0" Height="36">Рахунок:</TextBlock>
                    <ComboBox Name="add_transaction_account" Height="20" VerticalAlignment="Center" Margin="123,0,6,0" DropDownClosed="CbValueType_DropDownClosed">
                    </ComboBox>
                </Grid>
            </Border>

            <Border Background="#FFC284" BorderBrush="Black" BorderThickness="5" Margin="10,59,10,195">
                <Grid>
                    <TextBlock FontSize="18" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="6,-1,0,0" Height="36">Категорія:</TextBlock>
                    <ComboBox Name="add_transaction_category" Height="20" VerticalAlignment="Center" Margin="123,0,6,0">

                    </ComboBox>
                </Grid>
            </Border>

            <Border Background="#FFC284" BorderBrush="Black" BorderThickness="5" Margin="10,109,10,145">
                <Grid>
                    <TextBlock FontSize="18" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="6,-1,0,0" Height="36">Сума:</TextBlock>
                    <TextBox Name="add_transaction_sum" PreviewTextInput="PreviewTextInput" Margin="123,3,6,3"/>
                </Grid>
            </Border>

            <Border Background="#FFC284" BorderBrush="Black" BorderThickness="5" Margin="10,160,10,94">
                <Grid>
                    <TextBlock FontSize="18" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="6,-1,0,0" Height="36">Валюта:</TextBlock>
                    <ComboBox Name="add_transaction_currency" Height="20" VerticalAlignment="Center" Margin="123,3,6,3">
                    </ComboBox>
                </Grid>
            </Border>

            <Button x:Name="save_button" Click="Save_func" Background="#EFE4B0" BorderBrush="Black" BorderThickness="4" FontSize="18" FontWeight="Bold"  Content="Зберегти" Margin="145,235,10,10"/>
            <Button x:Name="cancel_button" Click="Cancel_func" Background="#EFE4B0" BorderBrush="Black" BorderThickness="4" FontSize="18" FontWeight="Bold"  Content="Скасувати" Margin="10,235,150,10"/>
        </Grid>
    </Border>
</Window>
