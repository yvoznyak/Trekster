<Window x:Class="Trekster_app.Presentation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Trekster_app.Presentation"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Trekster" Height="450" Width="800" >

    <Window.Resources>
        <Style x:Key = "myButtonStyle" TargetType = "Button">
            <Setter Property = "Background" Value = "#C987C9" />
            <Setter Property = "BorderBrush" Value = "Black" />
            <Setter Property = "BorderThickness" Value = "3" />
            <Setter Property = "Height" Value = "40" />
            <Setter Property = "FontSize" Value = "18" />
            <Setter Property = "Margin" Value = "0, 0, 0, 4" />
            <Setter Property = "FontWeight" Value = "Bold" />
        </Style>
    </Window.Resources>

    <DockPanel>
        <Border x:Name="Menu" BorderBrush="Gray" BorderThickness="5" DockPanel.Dock="Left">
            <StackPanel DockPanel.Dock="Left" Background="#C987C9"  Width="150">
                <Button x:Name="main_button" Click="Main_func" Style="{StaticResource myButtonStyle}" Content="Головна"  />
                <Button x:Name="accounts_button" Click="Accounts_func" Style="{StaticResource myButtonStyle}" Content="Рахунки" />
                <Button x:Name="history_button" Click="History_func" Style="{StaticResource myButtonStyle}" Content="Історія" />
                <Button x:Name="profits_button" Click="Profits_func" Style="{StaticResource myButtonStyle}" Content="Доходи" />
                <Button x:Name="expences_button" Click="Expences_func" Style="{StaticResource myButtonStyle}" Content="Витрати" />
                <Button x:Name="settings_button" Click="Settings_func" Style="{StaticResource myButtonStyle}" Content="Налаштування" />
            </StackPanel>
        </Border>

        <Grid>
            <Border x:Name="Main_block" BorderBrush="Gray" BorderThickness="5" Visibility="Visible">
                <Grid Background="#C7BFE6">
                    <Border BorderBrush="Black" BorderThickness="4" Margin="25,20,25,345" Background="#E2F2AF">
                        <TextBlock x:Name="total_balance" FontSize="18" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="6,0,0,0"> Text Content rgwergergergerge</TextBlock>
                    </Border>

                    <Border BorderBrush="Black" BorderThickness="4" Margin="25,84,25,95" Background="#E2F2AF">
                        <Grid>
                            <TextBlock FontSize="18" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0">Витрати:</TextBlock>
                            <Border x:Name="Expences_container" Width="536" BorderBrush="Black" BorderThickness="4" Margin="10,45,10,134" Background="White">
                                <Rectangle x:Name="Expences_rectangle" Fill="#F585AA" HorizontalAlignment="Left"></Rectangle>
                            </Border>
                            <TextBlock FontSize="18" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,119,0,0">Залишок:</TextBlock>
                            <Border x:Name="Remains_container" Width="536" BorderBrush="Black" BorderThickness="4" Margin="10,156,10,23" Background="White">
                                <Rectangle x:Name="Remains_rectangle" Fill="#99D9EA" HorizontalAlignment="Left"></Rectangle>
                            </Border>
                        </Grid>
                    </Border>


                    <Button x:Name="add_trans_button" Click="Add_trans_func" Background="#EFE4B0" BorderBrush="Black" BorderThickness="4" FontSize="18" FontWeight="Bold" Margin="170,344,196,10" Content="Додати транзакцію"/>
                </Grid>
            </Border>

            <Border x:Name="Accounts_block" BorderBrush="Gray" BorderThickness="5" Visibility="Hidden" >
                <Grid Background="#C7BFE6">
                    <Border BorderBrush="Black" BorderThickness="4" Margin="25,20,25,345" Background="#E2F2AF">
                        <TextBlock FontSize="18" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="6,0,0,0">Рахунки</TextBlock>
                    </Border>
                    
                    <ScrollViewer Margin="0,87,0,85">
                        <StackPanel x:Name="account_stack">

                        </StackPanel>
                    </ScrollViewer>

                    <Button x:Name="add_account_button" Click="Add_account_func" Background="#EFE4B0" BorderBrush="Black" BorderThickness="4" FontSize="18" FontWeight="Bold" Margin="170,344,196,10" Content="Додати рахунок"/>
                </Grid>
            </Border>

            <Border x:Name="History_block" BorderBrush="Gray" BorderThickness="5" Visibility="Hidden" >
                <Grid Background="#C7BFE6">
                    <Border BorderBrush="Black" BorderThickness="4" Margin="25,20,25,345" Background="#E2F2AF">
                        <TextBlock FontSize="18" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="6,0,0,0">Історія транзакцій</TextBlock>
                    </Border>

                    <ScrollViewer Margin="0,84,0,10">
                        <StackPanel x:Name="history_stack">

                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>

            <Border x:Name="Profits_block" BorderBrush="Gray" BorderThickness="5" Visibility="Hidden" >
                <Grid Background="#C7BFE6">
                    <Border BorderBrush="Black" BorderThickness="4" Margin="25,20,25,345" Background="#E2F2AF">
                        <TextBlock FontSize="18" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="6,0,0,0">Доходи</TextBlock>
                    </Border>

                    <Border BorderBrush="Black" BorderThickness="4" Margin="484,68,25,299" Background="#DBDBDB">
                        <TextBlock x:Name="month_profits" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center">wefwe</TextBlock>
                    </Border>

                    <ScrollViewer Margin="0,125,0,74">
                        <StackPanel x:Name="profits_stack">

                        </StackPanel>
                    </ScrollViewer>

                    <Border BorderBrush="Black" BorderThickness="4" Margin="25,355,25,10" Background="#99D9EA">
                        <TextBlock x:Name="profits_summary" FontSize="18" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="6,0,0,0">Підсумок</TextBlock>
                    </Border>
                </Grid>
            </Border>

            <Border x:Name="Expences_block" BorderBrush="Gray" BorderThickness="5" Visibility="Hidden" >
                <Grid Background="#C7BFE6">
                    <Border BorderBrush="Black" BorderThickness="4" Margin="25,20,25,345" Background="#E2F2AF">
                        <TextBlock FontSize="18" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="6,0,0,0">Витрати</TextBlock>
                    </Border>

                    <Border BorderBrush="Black" BorderThickness="4" Margin="484,68,25,299" Background="#DBDBDB">
                        <TextBlock x:Name="month_expenses" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center">wefwe</TextBlock>
                    </Border>

                    <ScrollViewer Margin="0,125,0,74">
                        <StackPanel x:Name="expences_stack">

                        </StackPanel>
                    </ScrollViewer>

                    <Border BorderBrush="Black" BorderThickness="4" Margin="25,355,25,10" Background="#F585AA">
                        <TextBlock x:Name="expenses_summary" FontSize="18" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="6,0,0,0">Доходи</TextBlock>
                    </Border>
                </Grid>
            </Border>

            <Border x:Name="Settings_block" BorderBrush="Gray" BorderThickness="5" Visibility="Hidden" >
                <Grid Background="#C7BFE6">
                    <Border BorderBrush="Black" BorderThickness="4" Margin="25,20,25,345" Background="#E2F2AF">
                        <TextBlock FontSize="18" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="6,0,0,0">Налаштування</TextBlock>
                    </Border>

                    <Button x:Name="settings_accounts_button" Click="Settings_accounts_func" Background="#E2F2AF" BorderBrush="Black" BorderThickness="4" FontSize="18" FontWeight="Bold" Margin="25,125,0,242" Content="Рахунки" HorizontalAlignment="Left" Width="290"/>
                    <Button x:Name="settings_categories_button" Click="Settings_categories_func" Background="#E2F2AF" BorderBrush="Black" BorderThickness="4" FontSize="18" FontWeight="Bold" Margin="25,184,0,183" Content="Категорії" HorizontalAlignment="Left" Width="290"/>
                </Grid>
            </Border>

            <Border x:Name="Settings_accounts_block" BorderBrush="Gray" BorderThickness="5" Visibility="Hidden" >
                <Grid Background="#C7BFE6">
                    <Border BorderBrush="Black" BorderThickness="4" Margin="25,20,25,345" Background="#E2F2AF">
                        <TextBlock FontSize="18" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="6,0,0,0">Налаштування рахунків</TextBlock>
                    </Border>

                    <ScrollViewer Margin="0,125,0,74">
                        <StackPanel x:Name="settings_accounts_stack">

                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>

            <Border x:Name="Settings_categories_block" BorderBrush="Gray" BorderThickness="5" Visibility="Hidden" >
                <Grid Background="#C7BFE6">
                    <Border BorderBrush="Black" BorderThickness="4" Margin="25,20,25,345" Background="#E2F2AF">
                        <TextBlock FontSize="18" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="6,0,0,0">Налаштування категорій</TextBlock>
                    </Border>

                    <ScrollViewer Margin="0,125,0,74">
                        <StackPanel x:Name="settings_categories_stack">

                        </StackPanel>
                    </ScrollViewer>

                    <Button x:Name="add_category_button" Click="Add_category_func" Background="#EFE4B0" BorderBrush="Black" BorderThickness="4" FontSize="18" FontWeight="Bold" Margin="170,344,196,10" Content="Додати категорію"/>

                </Grid>
            </Border>

        </Grid>



    </DockPanel>


</Window>